<!DOCTYPE html>
<html lang="es">

<head>
    {{> headers }}
</head>

<body class="min-h-screen flex flex-col">

    {{> navbar }}

    <main class="flex-1 flex flex-col items-center px-4 py-10">
        <div class="w-full md:w-[60%] p-6 bg-white rounded-lg shadow-md">
            <form action="/producto" method="post" class="space-y-4">

                <!-- Título -->
                <div>
                    <label class="text-xl font-semibold">Título</label>
                    <input name="titulo" type="text" placeholder="Nuevo título..." class="input input-primary w-full" />
                </div>

                <!-- URL -->
                <div>
                    <label class="text-xl font-semibold">URL de la imagen</label>
                    <input name="img" type="text" placeholder="Imagen por URL..." class="input input-primary w-full" />
                </div>

                <!-- Botones -->
                <div class="flex gap-4 justify-center mt-4">
                    <a href="/" class="btn btn-outline btn-primary flex-1 text-center">Volver</a>
                    <button type="submit" class="btn btn-primary flex-1">Crear</button>
                </div>
            </form>
        </div>
    </main>

    {{> footer }}

</body>

</html>