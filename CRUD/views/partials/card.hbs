<a href="/producto/{{id}}">
  <div class="relative w-full sm:w-64 md:w-72 lg:w-80 overflow-hidden rounded-xl shadow-lg">
    <img src="{{img}}" alt="{{titulo}}" class="w-full h-64 object-cover">
    <!-- Overlay degradado -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>

    <!-- ID en esquina -->
    <div class="absolute top-2 right-2 bg-black/70 text-white text-xs font-bold px-2 py-1 rounded">
      {{id}}
    </div>

    <!-- TÃ­tulo centrado -->
    <div class="absolute inset-0 flex items-center justify-center">
      <h2 class="text-white text-2xl md:text-3xl font-extrabold text-center px-4 drop-shadow-2xl">
        {{titulo}}
      </h2>
    </div>
  </div>
</a>
